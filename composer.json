{
    "name": "cmaymard/php-xml-schema",
    "description": "Provides support to parse and create an in-memory representation of a XML Schema document.", 
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Christophe Maymard",
            "email": "christophe.maymard@hotmail.com"
        }
    ],
    "keywords": [ "php", "xml", "schema" ],
    "require": {
        "php": ">=7.3",
        "ext-gmp": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "9.1.*", 
        "phpspec/prophecy-phpunit": "^2"
    },
    "autoload": {
        "psr-4": {
            "PhpXmlSchema\\": "src/PhpXmlSchema/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpXmlSchema\\Test\\": "test/PhpXmlSchema/Test/"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
