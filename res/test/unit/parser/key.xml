<testSet>
  <!-- key -->
  <test group="attribute" name="[key] unsupported attribute from no namespace">
    <schema fileName="key_0001.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The "foo" attribute (from no namespace) is not supported.</message>
    </schema>
  </test>
  <test group="attribute" name="[key] unsupported attribute from XML 1.0 namespace">
    <schema fileName="key_0002.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The "foo" attribute (from http://www.w3.org/XML/1998/namespace namespace) is not supported.</message>
    </schema>
  </test>
  <test group="attribute" name="[key] unsupported attribute from other namespace">
    <schema fileName="key_0003.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The "bar" attribute (from http://example.org namespace) is not supported.</message>
    </schema>
  </test>
  <test group="content" name="[key] node not white space neither comment">
    <schema fileName="key_0004.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The node is not allowed ("foo").</message>
    </schema>
  </test>
  <test group="content" name="[key] foo child element is not supported">
    <schema fileName="key_0005.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The "foo" element (from no namespace) is unexpected, expected: "selector".</message>
    </schema>
  </test>
  <!-- selector -->
  <test group="content" name="[key][selector] not part of the XML Schema 1.0 namespace">
    <schema fileName="selector_0001.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The "selector" element (from no namespace) is unexpected, expected: "selector".</message>
    </schema>
  </test>
  <!-- field -->
  <test group="content" name="[key][field] not part of the XML Schema 1.0 namespace">
    <schema fileName="field_0001.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The "field" element (from no namespace) is unexpected, expected: "field".</message>
    </schema>
  </test>
  <!-- container -->
  <test group="content" name="[key][container] Empty content">
    <schema fileName="container_0001.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The content is invalid.</message>
    </schema>
  </test>
  <test group="content" name="[key][container] selector">
    <schema fileName="container_0002.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The content is invalid.</message>
    </schema>
  </test>
