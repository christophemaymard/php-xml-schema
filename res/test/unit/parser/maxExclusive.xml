<testSet>
  <!-- maxExclusive -->
  <test group="attribute" name="[maxExclusive] unsupported attribute from no namespace">
    <schema fileName="maxExclusive_0001.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The "foo" attribute (from no namespace) is not supported.</message>
    </schema>
  </test>
  <test group="attribute" name="[maxExclusive] unsupported attribute from XML 1.0 namespace">
    <schema fileName="maxExclusive_0002.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The "foo" attribute (from http://www.w3.org/XML/1998/namespace namespace) is not supported.</message>
    </schema>
  </test>
  <test group="attribute" name="[maxExclusive] unsupported attribute from other namespace">
    <schema fileName="maxExclusive_0003.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The "bar" attribute (from http://example.org namespace) is not supported.</message>
    </schema>
  </test>
  <test group="content" name="[maxExclusive] node not white space neither comment">
    <schema fileName="maxExclusive_0004.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The node is not allowed ("foo").</message>
    </schema>
  </test>
  <test group="content" name="[maxExclusive] foo child element is not supported">
    <schema fileName="maxExclusive_0005.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The "foo" element (from no namespace) is unexpected, expected: none.</message>
    </schema>
  </test>
  <!-- maxExclusive::fixed -->
  <test group="attribute" name="[maxExclusive][attribute::fixed] true (uppercase)">
    <schema fileName="maxExclusive_fixed_0009.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>"True" is an invalid boolean datatype.</message>
    </schema>
  </test>
  <test group="attribute" name="[maxExclusive][attribute::fixed] false (uppercase)">
    <schema fileName="maxExclusive_fixed_0010.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>"False" is an invalid boolean datatype.</message>
    </schema>
  </test>
  <test group="attribute" name="[maxExclusive][attribute::fixed] Numeric other than 0 or 1">
    <schema fileName="maxExclusive_fixed_0011.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>"2" is an invalid boolean datatype.</message>
    </schema>
  </test>
  <!-- maxExclusive::id -->
  <test group="attribute" name="[maxExclusive][attribute::id] Empty string">
    <schema fileName="maxExclusive_id_0009.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>"" is an invalid ID.</message>
    </schema>
  </test>
  <test group="attribute" name="[maxExclusive][attribute::id] Only white spaces">
    <schema fileName="maxExclusive_id_0010.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>"" is an invalid ID.</message>
    </schema>
  </test>
  <test group="attribute" name="[maxExclusive][attribute::id] Separated by whitespaces">
    <schema fileName="maxExclusive_id_0011.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>"foo bar" is an invalid ID.</message>
    </schema>
  </test>
  <test group="attribute" name="[maxExclusive][attribute::id] Starts with digit">
    <schema fileName="maxExclusive_id_0012.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>"8foo" is an invalid ID.</message>
    </schema>
  </test>
  <test group="attribute" name="[maxExclusive][attribute::id] Starts with .">
    <schema fileName="maxExclusive_id_0013.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>".foo" is an invalid ID.</message>
    </schema>
  </test>
  <test group="attribute" name="[maxExclusive][attribute::id] Starts with -">
    <schema fileName="maxExclusive_id_0014.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>"-foo" is an invalid ID.</message>
    </schema>
  </test>
  <test group="attribute" name="[maxExclusive][attribute::id] Contains invalid character">
    <schema fileName="maxExclusive_id_0015.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>"foo:bar" is an invalid ID.</message>
    </schema>
  </test>
