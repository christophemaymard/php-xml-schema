<testSet>
  <!-- enumeration -->
  <test group="attribute" name="[enumeration] unsupported attribute from no namespace">
    <schema fileName="enumeration_0001.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The "foo" attribute (from no namespace) is not supported.</message>
    </schema>
  </test>
  <test group="attribute" name="[enumeration] unsupported attribute from XML 1.0 namespace">
    <schema fileName="enumeration_0002.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The "foo" attribute (from http://www.w3.org/XML/1998/namespace namespace) is not supported.</message>
    </schema>
  </test>
  <test group="attribute" name="[enumeration] unsupported attribute from other namespace">
    <schema fileName="enumeration_0003.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The "bar" attribute (from http://example.org namespace) is not supported.</message>
    </schema>
  </test>
  <test group="content" name="[enumeration] node not white space neither comment">
    <schema fileName="enumeration_0004.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The node is not allowed ("foo").</message>
    </schema>
  </test>
  <test group="content" name="[enumeration] foo child element is not supported">
    <schema fileName="enumeration_0005.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The "foo" element (from no namespace) is unexpected, expected: none.</message>
    </schema>
  </test>
  <!-- enumeration::id -->
  <test group="attribute" name="[enumeration][attribute::id] Empty string">
    <schema fileName="enumeration_id_0009.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>"" is an invalid ID.</message>
    </schema>
  </test>
  <test group="attribute" name="[enumeration][attribute::id] Only white spaces">
    <schema fileName="enumeration_id_0010.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>"" is an invalid ID.</message>
    </schema>
  </test>
  <test group="attribute" name="[enumeration][attribute::id] Separated by whitespaces">
    <schema fileName="enumeration_id_0011.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>"foo bar" is an invalid ID.</message>
    </schema>
  </test>
  <test group="attribute" name="[enumeration][attribute::id] Starts with digit">
    <schema fileName="enumeration_id_0012.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>"8foo" is an invalid ID.</message>
    </schema>
  </test>
  <test group="attribute" name="[enumeration][attribute::id] Starts with .">
    <schema fileName="enumeration_id_0013.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>".foo" is an invalid ID.</message>
    </schema>
  </test>
  <test group="attribute" name="[enumeration][attribute::id] Starts with -">
    <schema fileName="enumeration_id_0014.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>"-foo" is an invalid ID.</message>
    </schema>
  </test>
  <test group="attribute" name="[enumeration][attribute::id] Contains invalid character">
    <schema fileName="enumeration_id_0015.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>"foo:bar" is an invalid ID.</message>
    </schema>
  </test>
