<testSet>
  <!-- any -->
  <test group="attribute" name="[any] unsupported attribute from no namespace">
    <schema fileName="any_0001.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The "foo" attribute (from no namespace) is not supported.</message>
    </schema>
  </test>
  <test group="attribute" name="[any] unsupported attribute from XML 1.0 namespace">
    <schema fileName="any_0002.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The "foo" attribute (from http://www.w3.org/XML/1998/namespace namespace) is not supported.</message>
    </schema>
  </test>
  <test group="attribute" name="[any] unsupported attribute from other namespace">
    <schema fileName="any_0003.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The "bar" attribute (from http://example.org namespace) is not supported.</message>
    </schema>
  </test>
  <test group="content" name="[any] node not white space neither comment">
    <schema fileName="any_0004.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The node is not allowed ("foo").</message>
    </schema>
  </test>
  <test group="content" name="[any] foo child element is not supported">
    <schema fileName="any_0005.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The "foo" element (from no namespace) is unexpected, expected: none.</message>
    </schema>
  </test>
  <!-- any::id -->
  <test group="attribute" name="[any][attribute::id] Empty string">
    <schema fileName="any_id_0009.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>The "id" attribute is invalid: "" is an invalid ID datatype.</message>
    </schema>
  </test>
  <test group="attribute" name="[any][attribute::id] Only white spaces">
    <schema fileName="any_id_0010.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>The "id" attribute is invalid: "" is an invalid ID datatype.</message>
    </schema>
  </test>
  <test group="attribute" name="[any][attribute::id] Separated by whitespaces">
    <schema fileName="any_id_0011.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>The "id" attribute is invalid: "foo bar" is an invalid ID datatype.</message>
    </schema>
  </test>
  <test group="attribute" name="[any][attribute::id] Starts with digit">
    <schema fileName="any_id_0012.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>The "id" attribute is invalid: "8foo" is an invalid ID datatype.</message>
    </schema>
  </test>
  <test group="attribute" name="[any][attribute::id] Starts with .">
    <schema fileName="any_id_0013.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>The "id" attribute is invalid: ".foo" is an invalid ID datatype.</message>
    </schema>
  </test>
  <test group="attribute" name="[any][attribute::id] Starts with -">
    <schema fileName="any_id_0014.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>The "id" attribute is invalid: "-foo" is an invalid ID datatype.</message>
    </schema>
  </test>
  <test group="attribute" name="[any][attribute::id] Contains invalid character">
    <schema fileName="any_id_0015.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>The "id" attribute is invalid: "foo:bar" is an invalid ID datatype.</message>
    </schema>
  </test>
  <!-- any::maxOccurs -->
  <test group="attribute" name="[any][attribute::maxOccurs] unbounded surrounded by white spaces">
    <schema fileName="any_maxOccurs_0010.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>The "maxOccurs" attribute is invalid: "     unbounded      " is an invalid non-negative integer limit type.</message>
    </schema>
  </test>
  <test group="attribute" name="[any][attribute::maxOccurs] Negative integer">
    <schema fileName="any_maxOccurs_0011.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>The "maxOccurs" attribute is invalid: "-9" is an invalid non-negative integer limit type.</message>
    </schema>
  </test>
  <!-- any::minOccurs -->
  <test group="attribute" name="[any][attribute::minOccurs] Negative integer">
    <schema fileName="any_minOccurs_0009.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>The "minOccurs" attribute is invalid: "-9" is an invalid nonNegativeInteger datatype.</message>
    </schema>
  </test>
