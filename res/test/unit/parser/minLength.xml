<testSet>
  <!-- minLength -->
  <test group="attribute" name="[minLength] unsupported attribute from no namespace">
    <schema fileName="minLength_0001.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The "foo" attribute (from no namespace) is not supported.</message>
    </schema>
  </test>
  <test group="attribute" name="[minLength] unsupported attribute from XML 1.0 namespace">
    <schema fileName="minLength_0002.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The "foo" attribute (from http://www.w3.org/XML/1998/namespace namespace) is not supported.</message>
    </schema>
  </test>
  <test group="attribute" name="[minLength] unsupported attribute from other namespace">
    <schema fileName="minLength_0003.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The "bar" attribute (from http://example.org namespace) is not supported.</message>
    </schema>
  </test>
  <test group="content" name="[minLength] node not white space neither comment">
    <schema fileName="minLength_0004.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The node is not allowed ("foo").</message>
    </schema>
  </test>
  <test group="content" name="[minLength] foo child element is not supported">
    <schema fileName="minLength_0005.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The "foo" element (from no namespace) is unexpected, expected: "annotation".</message>
    </schema>
  </test>
  <!-- minLength::fixed -->
  <test group="attribute" name="[minLength][attribute::fixed] true (uppercase)">
    <schema fileName="minLength_fixed_0009.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>The "fixed" attribute is invalid: "True" is an invalid boolean datatype.</message>
    </schema>
  </test>
  <test group="attribute" name="[minLength][attribute::fixed] false (uppercase)">
    <schema fileName="minLength_fixed_0010.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>The "fixed" attribute is invalid: "False" is an invalid boolean datatype.</message>
    </schema>
  </test>
  <test group="attribute" name="[minLength][attribute::fixed] Numeric other than 0 or 1">
    <schema fileName="minLength_fixed_0011.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>The "fixed" attribute is invalid: "2" is an invalid boolean datatype.</message>
    </schema>
  </test>
  <!-- minLength::id -->
  <test group="attribute" name="[minLength][attribute::id] Empty string">
    <schema fileName="minLength_id_0009.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>The "id" attribute is invalid: "" is an invalid ID.</message>
    </schema>
  </test>
  <test group="attribute" name="[minLength][attribute::id] Only white spaces">
    <schema fileName="minLength_id_0010.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>The "id" attribute is invalid: "" is an invalid ID.</message>
    </schema>
  </test>
  <test group="attribute" name="[minLength][attribute::id] Separated by whitespaces">
    <schema fileName="minLength_id_0011.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>The "id" attribute is invalid: "foo bar" is an invalid ID.</message>
    </schema>
  </test>
  <test group="attribute" name="[minLength][attribute::id] Starts with digit">
    <schema fileName="minLength_id_0012.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>The "id" attribute is invalid: "8foo" is an invalid ID.</message>
    </schema>
  </test>
  <test group="attribute" name="[minLength][attribute::id] Starts with .">
    <schema fileName="minLength_id_0013.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>The "id" attribute is invalid: ".foo" is an invalid ID.</message>
    </schema>
  </test>
  <test group="attribute" name="[minLength][attribute::id] Starts with -">
    <schema fileName="minLength_id_0014.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>The "id" attribute is invalid: "-foo" is an invalid ID.</message>
    </schema>
  </test>
  <test group="attribute" name="[minLength][attribute::id] Contains invalid character">
    <schema fileName="minLength_id_0015.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>The "id" attribute is invalid: "foo:bar" is an invalid ID.</message>
    </schema>
  </test>
  <!-- minLength::value -->
  <test group="attribute" name="[minLength][attribute::value] Negative integer">
    <schema fileName="minLength_value_0009.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidValueException</exception>
      <message>The "value" attribute is invalid: "-9" is an invalid non-negative integer.</message>
    </schema>
  </test>
  <!-- annotation -->
  <test group="content" name="[minLength][annotation] not part of the XML Schema 1.0 namespace">
    <schema fileName="annotation_0001.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The "annotation" element (from no namespace) is unexpected, expected: "annotation".</message>
    </schema>
  </test>
  <!-- container -->
  <test group="content" name="[minLength][container] annotation unexpected annotation">
    <schema fileName="container_0001.xsd">
      <exception>\PhpXmlSchema\Exception\InvalidOperationException</exception>
      <message>The "annotation" element (from http://www.w3.org/2001/XMLSchema namespace) is unexpected, expected: none.</message>
    </schema>
  </test>
  <!-- TEMPLATE
  <test group="attribute|content" name="">
    <schema fileName=".xsd">
      <exception></exception>
      <message></message>
    </schema>
  </test>
  -->
</testSet>
